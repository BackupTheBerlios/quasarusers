    <!--  Parameter für die Komponente "MITARBEITER" -->
    <!-- -->

    <!--  Anzahl der dargestellten Mitarbeiter  in "StandardMAListe" -->
    <!--  (Falls mehr angezeigt werden, wird gescrollt) -->
